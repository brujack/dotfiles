[core]
	excludesfile = /Users/bruce/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[user]
	name = Bruce Jackson
	email = bjackson@pobox.com
[commit]
	template = /Users/bruce/.stCommitMsg
[alias]
	pl = pull
  br = branch
  ci = commit
  co = checkout
  st = status
  undo = reset --soft 'HEAD^'
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[diff "sopsdiffer"]
	textconv = sops -d
[credential]
	helper = !/usr/lib/jvm/java-1.8.0-openjdk-1.8.0.222.b10-0.el7_6.x86_64/jre/bin/java -Ddebug=false -Djava.net.useSystemProxies=true -jar /usr/lib/git-credential-manager-2.0.4.jar
